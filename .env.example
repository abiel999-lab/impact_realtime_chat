# App
APP_NAME=Impact Realtime Chat (FastAPI)
ENV=dev

# DB (local default)
DATABASE_URL=sqlite:///./chat.db
# For Postgres in prod:
# DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/impact_chat

# CORS
ALLOWED_ORIGINS=["http://localhost:8000"]
SIO_CORS_ORIGINS=["*"]

# Rooms & uploads
DEFAULT_ROOM=
UPLOAD_DIR=uploads
MAX_UPLOAD_MB=50

# Auth
JWT_SECRET=change_this_super_secret
JWT_EXPIRE_MINUTES=43200  # 30 days